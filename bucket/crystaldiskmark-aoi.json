{
    "version": "9.0.2",
    "description": "CrystalDiskMark Aoi Edition - A simple disk benchmark software with Aoi character design",
    "homepage": "https://crystalmark.info/en/software/crystaldiskmark/",
    "license": "BSD-3-Clause",
    "url": "https://sourceforge.net/projects/crystaldiskmark/files/9.0.2/CrystalDiskMark9_0_2Aoi.zip",
    "hash": "sha1:24e80c45f62c605f41cd8581243a65d70ee18a9a",
    "pre_install": [
        "'64', '32' | ForEach-Object {",
        "    if (!(Test-Path \"$persist_dir\\DiskMark$_.ini\")) { New-Item \"$dir\\DiskMark$_.ini\" | Out-Null }",
        "}"
    ],
    "architecture": {
        "64bit": {
            "bin": [
                [
                    "DiskMark64A.exe",
                    "DiskMark"
                ]
            ],
            "shortcuts": [
                [
                    "DiskMark64A.exe",
                    "CrystalDiskMark Aoi Edition"
                ]
            ]
        },
        "32bit": {
            "bin": [
                [
                    "DiskMark32A.exe",
                    "DiskMark"
                ]
            ],
            "shortcuts": [
                [
                    "DiskMark32A.exe",
                    "CrystalDiskMark Aoi Edition"
                ]
            ]
        }
    },
    "persist": [
        "DiskMark32.ini",
        "DiskMark64.ini"
    ],
    "checkver": {
        "sourceforge": "crystaldiskmark",
        "regex": "([\\d.a-zA-Z]+)/CrystalDiskMark.*Aoi.zip"
    },
    "autoupdate": {
        "url": "https://sourceforge.net/projects/crystaldiskmark/files/$version/CrystalDiskMark$underscoreVersionAoi.zip",
        "hash": {
            "url": "https://sourceforge.net/projects/crystaldiskmark/files/$version/",
            "find": "CrystalDiskMark$underscoreVersionAoi\\.zip\".*?\"sha1\":\"$sha1\""
        }
    }
}
